	%body#alex

		.container
			=yield

		:javascript

			function toggleView(id){
				var targetDiv = document.getElementById(id);
				console.log(targetDiv);

				if(targetDiv.style.display == "block"){
					targetDiv.style.display = "none";
				} else {
					targetDiv.style.display = "block";
				}
			}